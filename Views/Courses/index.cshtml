@model IEnumerable<EBOOK.Models.Course>

<h2>Courses</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Classroom</th>
            <th>Teacher</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.Description</td>
                <td>@course.Classroom.Name</td>
                <td>@course.Teacher.FirstName</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = course.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = course.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Create New Course</a>
