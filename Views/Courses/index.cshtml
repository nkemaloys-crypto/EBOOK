@model IEnumerable<EBOOK.Models.Course>

@{
    ViewData["Title"] = "Liste des Cours";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>ðŸ“š Liste des Cours</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">âž• Nouveau Cours</a>
    </p>
</div>

<hr />

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr class="table-dark">
            <th>Titre</th>
            <th>Description</th>
            <th>Classe</th>
            <th>Enseignant</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td><strong>@course.Title</strong></td>
                <td>
                    @(course.Description.Length > 30 ? course.Description.Substring(0, 30) + "..." : course.Description)
                </td>
                <td>@course.Classroom.Name</td>
                <td>@course.Teacher.FirstName @course.Teacher.LastName</td>
                
                <td class="text-nowrap text-center">
                    <a asp-controller="Presence" asp-action="TakeAttendance" asp-route-courseId="@course.Id" 
                       class="btn btn-sm btn-success">
                       <i class="bi bi-check2-square"></i> Appel
                    </a>

                    <a asp-action="Details" asp-route-id="@course.Id" 
                       class="btn btn-sm btn-info text-white">
                       <i class="bi bi-eye"></i> Voir
                    </a>

                    <a asp-action="Edit" asp-route-id="@course.Id" 
                       class="btn btn-sm btn-warning">
                       <i class="bi bi-pencil"></i> Modif
                    </a>

                    <a asp-action="Delete" asp-route-id="@course.Id" 
                       class="btn btn-sm btn-danger">
                       <i class="bi bi-trash"></i> Suppr
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>