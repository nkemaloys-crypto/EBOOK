@model EBOOK.Models.Student

@{
    ViewData["Title"] = "Supprimer l'Étudiant";
}

<div class="container mt-4">
    <h1 class="text-danger">Supprimer l'étudiant</h1>

    <div class="alert alert-warning shadow-sm border-start border-4 border-warning">
        <h3 class="fw-bold">⚠️ Attention</h3>
        <p class="mb-0">Êtes-vous sûr de vouloir supprimer <strong>@(Model?.FirstName) @(Model?.LastName)</strong> ? Cette action est irréversible.</p>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h5 class="card-title mb-4">Informations du profil</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 text-muted">Prénom</dt>
                <dd class="col-sm-9 fw-bold">@(Model?.FirstName ?? "N/A")</dd>
                
                <dt class="col-sm-3 text-muted">Nom</dt>
                <dd class="col-sm-9 fw-bold">@(Model?.LastName ?? "N/A")</dd>
                
                <dt class="col-sm-3 text-muted">Date de naissance</dt>
                <dd class="col-sm-9">@(Model?.DateOfBirth.ToString("dd/MM/yyyy") ?? "N/A")</dd>
                
                <dt class="col-sm-3 text-muted">Classe assignée</dt>
                <dd class="col-sm-9">
                    @if (Model?.Classroom != null)
                    {
                        <span class="badge bg-light text-dark border">@Model.Classroom.Name</span>
                    }
                    else
                    {
                        <span class="text-muted italic">Aucune classe assignée</span>
                    }
                </dd>

                <dt class="col-sm-3 text-muted">Statut</dt>
                <dd class="col-sm-9">
                    @if (Model != null && Model.IsDelegate)
                    {
                        <span class="badge bg-info text-dark">⭐ Délégué</span>
                    }
                    else
                    {
                        <span>Étudiant régulier</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-white py-3">
            <form asp-action="Delete"> 
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash me-2"></i>Confirmer la suppression
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Annuler</a>
            </form>
        </div>
    </div>
</div>