@model EBOOK.Models.TakeAttendanceViewModel

@{
    ViewData["Title"] = "Faire l'appel";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">üìù Appel : @Model.CourseTitle</h3>
            <span class="badge bg-secondary">Classe : @Model.ClassroomName</span>
        </div>
        
        <div class="card-body">
            <form asp-action="TakeAttendance" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                @* Champs cach√©s pour le transfert des donn√©es *@
                <input type="hidden" asp-for="CourseId" />
                
                <div class="row mb-4">
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Date de la s√©ance</label>
                        <input asp-for="Date" type="date" class="form-control" />
                    </div>
                </div>

                <hr />

                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>√âtudiant</th>
                            <th class="text-center">Pr√©sence</th>
                            <th>Remarques / Retards</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Students.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Model.Students[i].FullName
                                    <input type="hidden" asp-for="@Model.Students[i].StudentId" />
                                    <input type="hidden" asp-for="@Model.Students[i].FullName" />
                                </td>
                                <td class="text-center">
                                    <div class="form-check form-switch d-inline-block">
                                        @* Le bouton switch est plus moderne pour cocher rapidement *@
                                        <input class="form-check-input" type="checkbox" 
                                               asp-for="@Model.Students[i].IsPresent" 
                                               id="check_@i" checked />
                                        <label class="form-check-label" for="check_@i">Pr√©sent</label>
                                    </div>
                                </td>
                                <td>
                                    <input asp-for="@Model.Students[i].Remarks" 
                                           class="form-control form-control-sm" 
                                           placeholder="Ex: Retard 10min, motif..." />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <a asp-controller="Course" asp-action="Index" class="btn btn-outline-secondary">Annuler</a>
                    <button type="submit" class="btn btn-success btn-lg px-5">
                        ‚úÖ Enregistrer l'appel
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}